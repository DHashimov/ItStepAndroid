<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/grp_container"
              android:background="?attr/selectableItemBackground"
              android:clickable="true"
              android:layout_height="82dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView android:id="@+id/img_user_avatar"
               android:layout_width="@dimen/clickable_cell_height"
               android:layout_height="@dimen/clickable_cell_height"
               android:layout_marginLeft="@dimen/start_end_padding"
               android:layout_marginRight="@dimen/start_end_padding"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <TextView android:id="@+id/txt_user_name"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:maxLines="1"
                  android:paddingRight="@dimen/start_end_padding"
                  android:textColor="@color/black"
                  android:textSize="18sp"/>

        <TextView android:id="@+id/txt_user_address"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:maxLines="2"
                  android:paddingRight="@dimen/start_end_padding"
                  android:textColor="@color/gray_90"
                  android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>